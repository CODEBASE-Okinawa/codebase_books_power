<h1 class="text-xl text-left">本管理 > 本登録</h1>

<%= form_tag({:action=>"search", :controller=>"admin/books"}, { method: :post }) do %>
  <div class="flex">
    <div>
      <div class="flex-col py-10 space-y-4 space-x-4">
        <label for="isbn">ISBN-10</label>
        <input class="w-80 bg-white shadow rounded" type="text" name="isbn" id="isbn"/>
      </div>
      <div>
        <label for="title">タイトル&nbsp; &nbsp;</label>
        <input class="w-80 h-16 bg-white shadow rounded" type="text" name="title" id="title"/>
      </div>
      <input type="submit" value="検索" class="w-full mt-6 text-white bg-blue-700 font-medium rounded-lg text-sm px-5 py-2.5" />
    </div>
  </div>
<% end %>

<% if @result_book %>
  <%= render partial: 'search_result', locals: { result_book: @result_book } %>
<% end %>
